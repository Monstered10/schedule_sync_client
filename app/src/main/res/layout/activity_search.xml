<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchScreen">

    <EditText
        android:id="@+id/queryBox"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:hint="Enter query"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="55dp" />

    <Button
        android:id="@+id/buttonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search by name"
        app:layout_constraintTop_toBottomOf="@+id/textName"
        tools:layout_editor_absoluteX="161dp" />

    <Button
        android:id="@+id/buttonCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="search by course"
        app:layout_constraintTop_toBottomOf="@+id/textCourse"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonPoster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="search by poster name"
        app:layout_constraintTop_toBottomOf="@+id/textPoster"
        tools:layout_editor_absoluteX="0dp" />

</LinearLayout>